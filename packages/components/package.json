		"rimraf": "^3.0.2",
		"storybook-addon-styled-component-theme": "^1.3.0",
		"styled-components": "^5.1.0",
		"ts-jest": "^26.0.0",
		"ts-loader": "^7.0.5",
		"typescript": "^3.9.3"
	},
	"peerDependencies": {
		"react": "^16.13.1",
		"react-dom": "^16.13.1"
	},
	"dependencies": {
		"@types/enzyme": "^3.10.5",
		"@types/jest": "^25.2.3",
		"@types/lodash": "^4.14.153",
		"@types/node": "^14.0.5",
		"@types/react": "^16.9.35",
		"@types/react-autosuggest": "^9.3.14",
		"@types/react-dom": "^16.9.8",
		"@types/styled-components": "^5.1.0"
	}
